(defwindow calendar-closer
  :monitor 0
  :stacking "fg"
  :geometry (geometry
    :width "100%"
    :height "100%"
    :anchor "top left"
  )
  (closer :window 'calendar')
)

(defwindow calendar
  :monitor 0
  :stacking "fg"
  :geometry (geometry
    :y "40px"
    :x "10px"
    :width "200px"
    :height "60px"
    :anchor "top right"
  )
  (calendar
    :class "calendar"
    :show-heading true
    :show-details true
    :show-week-numbers false
  )
)
