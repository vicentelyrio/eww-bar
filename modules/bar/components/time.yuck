(defpoll time
  :interval "1s"
  :initial `date +'%a %d %b %H:%M'`
  `date +'%a %d %b   %H:%M'`
)

(defwidget timedisplay []
  (box
    :class "timedisplay"
    :orientation "horizontal"
    (eventbox
      :onclick "./modules/bar/scripts/open-calendar.sh"
      (label :text `${time}`)
    )
  )
)

