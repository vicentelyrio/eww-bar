(defwidget workspaces []
  (box :class "workspaces"
       :orientation "h"
       :space-evenly true
       :halign "start"
       :spacing 10
    (for entry in WORKSPACES
      (button
        :onclick "hyprctl dispatch workspace ${entry}"
        {WORKSPACE_ACTIVE == entry ? "" : ""}
      )
    )
  )
)
